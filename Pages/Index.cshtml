@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    body {
        background: linear-gradient(to right, #141e30, #243b55);
        color: white;
        font-family: 'Segoe UI', sans-serif;
        padding: 2rem;
    }

    .hero {
        text-align: center;
        padding: 3rem;
        border-radius: 15px;
        background-color: rgba(0, 0, 0, 0.3);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.6);
        max-width: 900px;
        margin: auto;
    }

    .hero h1 {
        font-size: 4rem;
        font-weight: bold;
        color: #FFD700;
        margin-bottom: 2rem;
        text-shadow: 2px 2px 10px rgba(0,0,0,0.7);
    }

    .love-message {
        font-size: 1.4rem;
        font-style: italic;
        color: #ffdddd;
        margin: 2rem 0;
    }

    .avatars {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 2rem;
    }

    .avatars img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 4px solid #FFD700;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
        transition: transform 0.3s ease;
    }

    .avatars img:hover {
        transform: scale(1.05);
    }
</style>

